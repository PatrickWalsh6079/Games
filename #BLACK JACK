            player_turn = False
    
    if restart_game == True:
        # reset number of cards starting in hand
        no_cards = 2
        # reset tally_check to 3
        tally_check = 3
        continue
    
    # if player chooses not to play again
    if game_running == False:
        break
        
    # winning conditions
    player_wins = False
    dealer_wins = False
    tie_game = False


    # checks if player busted
    if player_bust == True:
        dealer_wins = True



    # determine which hand player currently has
    if no_cards == 2:
        final_hand = hand2
    elif no_cards == 3:
        final_hand = hand3
    elif no_cards == 4:
        final_hand = hand4
    elif no_cards == 5:
