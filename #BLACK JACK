    time.sleep(time_elapse)

    print('\n'*40)

    # flip over second card
    print("\nDealer's hand:")
    print(''.join(dealer_hand_revealed))
    print('\n'*5)
    print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand,'\t\tWager: $',human_player.wager)
    print("\nPlayer's hand:")
    print(''.join(final_hand))
    
    


    # check if dealer has 16 or less in hand
    dealer_tally = 0

    # check if dealer has an ace
    ace_dealer = False

    try:
        dealer_tally += int(deck[0][:2])
    except ValueError:
        if deck[0][:2] == 'A ':
            dealer_tally += 11
            ace_dealer = True
        elif deck[0][:2] == 'J ' or deck[0][:2] == 'Q ' or deck[0][:2] == 'K ':
            dealer_tally += 10
    try:
        dealer_tally += int(deck[1][:2])
    except ValueError:
        if deck[1][:2] == 'A ' and ace_dealer == False:
            dealer_tally += 11
            ace_dealer = True
        elif deck[1][:2] == 'A ' and ace_dealer == True:
            dealer_tally += 1
        elif deck[1][:2] == 'J ' or deck[1][:2] == 'Q ' or deck[1][:2] == 'K ':
            dealer_tally += 10
    #print('Dealer tally: ',dealer_tally)
    #print('\n')
    time.sleep(time_elapse)

    dealer_hit = False

    # if dealer has less than 17, hit
    if dealer_tally < 17:
        dealer_hit = True

    dealer_cards = 2
    counter = 1

    # dealer keeps hitting until 17 or higher in hand
    while dealer_hit == True:
        # reset ace dealer variable
        ace_dealer = False
        
        print('The dealer shall hit!')
        print('\n')
        dealer_cards += 1
        time.sleep(time_elapse)
        print('\n'*40)

        # show dealer's current hand
        print("\nDealer's hand:")
        if dealer_cards == 3:
            print(''.join(dealer_hand3))
        elif dealer_cards == 4:
            print(''.join(dealer_hand4))
        elif dealer_cards == 5:
            print(''.join(dealer_hand5))
        elif dealer_cards == 6:
            print(''.join(dealer_hand6))
        elif dealer_cards == 7:
            print(''.join(dealer_hand7))
        print('\n'*5)
        print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand,'\t\tWager: $',human_player.wager)
        print("\nPlayer's hand:")
        print(''.join(final_hand))

        # add up dealer's new tally
        counter += 1
        try:
            dealer_tally += int(deck[no_cards+counter][:2])
        except ValueError:
            if deck[no_cards+counter][:2] == 'A ' and ace_dealer == False:
                dealer_tally += 11
                ace_dealer = True
            elif deck[no_cards+counter][:2] == 'A ' and ace_dealer == True:
                dealer_tally += 1
            elif deck[no_cards+counter][:2] == 'J ' or deck[no_cards+counter][:2] == 'Q ' or deck[no_cards+counter][:2] == 'K ':
                dealer_tally += 10
        #print('Dealer tally: ',dealer_tally)

        # if dealer tally greater than 21
        if dealer_tally > 21:
            if ace_dealer == True:
                #print('Dealer has an ace!')
                #print('\n')
                dealer_tally -= 10
                if dealer_tally > 21:
                    #print('Even after the ace the dealer still has over 21')
                    #print('\n')
                    dealer_hit = False
                    dealer_bust = True

            elif ace_dealer == False:
                #print('The dealer does not have an ace and they busted')
                #print('\n')
                dealer_hit = False
                dealer_bust = True
        elif dealer_tally < 17:
            #print('Dealer still has less than 17, will hit again.')
            #print('\n')
            continue
        else:
            #print('Dealer has 17 or more and has not busted. End of dealer turn.')
            #print('\n')
            dealer_hit = False

    print('FINAL HANDS:      Dealer: ',dealer_tally,'Player: ',player_tally)
    print('\n')

    # if player wins by having higher tally
    if player_tally > dealer_tally and player_bust == False:
        player_wins = True
        print('Player wins!')
        human_player.in_hand += human_player.wager
        print('Won $',human_player.wager)
        print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand)
    # if player wins because dealer busted 
    elif dealer_bust == True:
        player_wins = True
        print('Player wins!')
        human_player.in_hand += human_player.wager
        print('Won $',human_player.wager)
        print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand)
    # if dealer wins    
    elif dealer_tally > player_tally and dealer_bust == False:
        dealer_wins = True
        print('Dealer wins!')
        human_player.in_hand -= human_player.wager
        print('Lost $',human_player.wager)
        print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand)
    # if tie    
    elif player_tally == dealer_tally:
        tie_game = True
        print('Push! Player and dealer have tied.')
        print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand)
    
    # ask if player wants to play again
    while True:
        print('\n')
        play_again = input("Would you like to play again? Please enter Yes 'y' or No 'n' ")
        if play_again == 'y'.lower():
            dealer_tally = 0
            player_tally = 0
            print('\n'*40)
            break
        elif play_again == 'n'.lower():
            print('\n'*40)
            hand_welcome = ['-------------','    ','-------------','    ','-------------','    ','-------------',
                '\n|',' A         ','|','    ','|',' A         ','|','    ','|',
                         ' A         ','|','    ','|',' A         ','|',
                '\n|','           ','|','    ','|','           ','|','    ','|','           ',
                         '|','    ','|','           ','|',
                '\n|','     {}    '.format(club),'|','    ','|','     {}    '.format(spade),'|','    ','|',
                         '     {}    '.format(heart),'|','    ','|','     {}    '.format(diamond),'|',
                '\n|','           ','|','    ','|','           ','|','    ','|','           ',
                         '|','    ','|','           ','|',
                '\n|','        A  ','|','    ','|','        A  ','|','    ','|',
                         '        A  ','|','    ','|','        A  ','|',
                '\n-------------','    ','-------------','    ','-------------','    ','-------------']
            print(''.join(hand_welcome))
            print('\n\n')
            print('Leaving the table with: $',human_player.in_hand)
            print('\n\n\n')
            print('\t\tThank you for playing!\n\n\n\n')
            game_running = False
            break
        else:
            print("You have entered an invalid input.\n\n")
            continue
