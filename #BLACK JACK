    # player's turn goes while True
    player_turn = True


    # checks if player or dealer has busted
    player_bust = False
    dealer_bust = False

    # checks if player has an ace
    ace_player = False

    # set tally for value of cards in hand
    player_tally = 0
    
    # determine the player tally
    try:
        player_tally += int(deck[2][:2])
    except ValueError:
        if deck[2][:2] == 'A ':
            player_tally += 11
            ace_player = True
        if deck[2][:2] == 'J ' or deck[2][:2] == 'Q ' or deck[2][:2] == 'K ':
            player_tally += 10
    try:
        player_tally += int(deck[3][:2])
    except ValueError:
        if deck[3][:2] == 'A ':
            player_tally += 11
            ace_player = True
        if deck[3][:2] == 'J ' or deck[3][:2] == 'Q ' or deck[3][:2] == 'K ':
            player_tally += 10

    print('Tally: ',player_tally)
