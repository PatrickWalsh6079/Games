# class has player attributes of name, amount of money in hand, and wager amount
class Player():
    
    # attributes are name, money in hand, and wager
    def __init__(self,name,in_hand,wager):
        self.name = name
        self.in_hand = in_hand
        self.wager = wager

# values will be decided by player
human_player = Player('',0,0)



while True:
    
    # ask for name
    player_name = input("Who is playing today?\n\nPlease enter the player's name: ")
    human_player.name = player_name
    print('\n' * 40)
    print('Welcome, '+human_player.name+'!')
    print('\n\n')
    break

# set to False until name and starting money amount are confirmed
ready_to_play = False
    
while not ready_to_play:
    
    # ask for how much money they have
    try:
        money_in_hand = int(input("How much are you bringing to the tables today?\n\nPlease enter a dollar amount using integers: "))
    except ValueError:
        print('\n' * 40)
        print('That value is invalid! Please enter an integer\n\n')
        continue
    else:
        human_player.in_hand = money_in_hand
        print('\n' * 40)
    
    # ask if inputs correct
    while True:
        print("Player: "+human_player.name+"\t\tMoney in hand: $",human_player.in_hand)
        print('\n\n')
        start_game = input("Is this correct? Please enter Yes 'y' or No 'n': ")
        print('\n' * 40)
        if start_game == 'y'.lower():
            ready_to_play = True
            break
        elif start_game == 'n'.lower():
            print('\n' * 40)
            break
        else:
            print('\n' * 40)
            print("That input is invalid! Please enter Yes 'y' or No 'n'")
            print('\n\n')
            continue


