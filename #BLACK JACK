                print("\t\t\tComputer's turn!")
                print('\n'*10)
                time.sleep(time_elapse)
                print('\n'*40)

            # if greater than 21
            elif player_tally > 21:
                if ace_player == True:
                    player_tally -= 10
                    print('You have an ace!')
                    print('\nNew tally: ',player_tally)
                    ace_used = True
                    if player_tally > 21:
                        #print('\n')
                        #print('Even after the ace you still have over 21')
                        player_turn = False
                        player_bust = True
                else:
                    #print('\n')
                    #print('You do not have an ace and you busted')
                    player_turn = False
                    player_bust = True

            break
        
        restart_game = False
        
        # if player busted
        if player_bust == True:
            dealer_wins = True
            print('\n')
            print('Dealer wins!')
            human_player.in_hand -= human_player.wager
            print('Lost $',human_player.wager)
            print('\nPlayer: '+human_player.name+'\t\tMoney in hand: $',human_player.in_hand)
            print('\n')
            
            # ask if player wants to play again
            while True:
                play_again = input("Would you like to play again? Please enter Yes 'y' or No 'n' ")
                if play_again == 'y'.lower():
                    # restart dealer and player tallies
                    dealer_tally = 0
                    player_tally = 0
                    # set restart game to True
                    restart_game = True
