        print("\t\t\tComputer's turn!")
        print('\n'*10)
        time.sleep(time_elapse)
        print('\n'*40)



    tally_check = 3

    ################
    # player's turn
    ################
    while player_turn == True and player_bust == False:
        
        # reset ace_player variable
        ace_player == False
        
        # check if player has max number of cards in hand
        if no_cards == 11:
            print('\n'*10)
            print("You have reached the maximum number of cards allowed in hand.\nIt is now the dealer's turn.")
            break
            
        # start while loop for 3 or more cards in hand
        while no_cards > 2:
            # determine the player tally
            tally_check += 1
            try:
                player_tally += int(deck[tally_check][:2])
            except ValueError:
                if deck[tally_check][:2] == 'A ':
                    player_tally += 11
                    ace_player = True
                elif deck[tally_check][:2] == 'J ' or deck[tally_check][:2] == 'Q ' or deck[tally_check][:2] == 'K ':
                    player_tally += 10
